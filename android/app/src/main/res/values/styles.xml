<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
         <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.ThemeLight</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.ThemeLight</item>
    </style>
    <style name="Dialog.ThemeLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#c51162</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.ThemeDark</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.ThemeDark</item>
    </style>
    <style name="Dialog.ThemeDark" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>                     <!--header background-->
        <item name="android:windowBackground">@color/black</item>               <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorPrimary</item>   <!--selected day-->
        <item name="android:textColorPrimary">@color/gray</item>                <!--days of the month-->
        <item name="android:textColorSecondary">@color/gray</item>              <!--days of the week-->
        <item name="android:numbersBackgroundColor">@color/darkGray</item>
    </style>

</resources>
